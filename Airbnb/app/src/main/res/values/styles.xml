<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- splash theme -->
    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <!-- log in theme -->
    <style name="LogInTheme" parent="SplashTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <!-- Phone - text -->
    <style name="PhoneTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">start|top</item>
    </style>

    <style name="PhoneInputNumStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">start|top</item>
    </style>
</resources>
