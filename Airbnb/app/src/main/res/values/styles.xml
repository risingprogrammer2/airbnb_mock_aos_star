<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- splash theme -->
    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <!-- log in theme -->
    <style name="LogInTheme" parent="SplashTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <!-- Phone: text -->
    <style name="PhoneTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">start|top</item>
    </style>

    <style name="PhoneInputNumStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">start|top</item>
    </style>

    <!-- Phone: EditText style -->
    <style name="PhoneEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/phone_text_input_num_selector</item>
        <item name="android:maxLength">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/greyForLogInTextOr</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textCursorDrawable">@drawable/log_in_text_phone_cursor</item>
    </style>
</resources>
