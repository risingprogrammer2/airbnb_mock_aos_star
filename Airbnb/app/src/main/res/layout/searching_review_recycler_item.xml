<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/searching_review_recycler_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/circle_border"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@id/searching_review_recycler_dates"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/searching_review_recycler_name"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/my_page_me" />

    <TextView
        android:id="@+id/searching_review_recycler_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="상호"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/searching_review_recycler_dates"
        app:layout_constraintStart_toEndOf="@id/searching_review_recycler_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/searching_review_recycler_dates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021년 2월"
        android:textColor="@color/greyForMainBtmText"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/searching_review_recycler_contents"
        app:layout_constraintStart_toStartOf="@id/searching_review_recycler_name"
        app:layout_constraintTop_toBottomOf="@id/searching_review_recycler_dates"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/searching_review_recycler_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="좋았어요!"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/searching_review_recycler_dates"
        app:layout_constraintBottom_toTopOf="@id/searching_review_recycler_translate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/searching_review_recycler_translate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="번역하기"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/searching_review_recycler_contents"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>