<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/on_store_item_root"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:background="@color/transparentForBackground"
    android:layout_marginBottom="16dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/on_store_item_img"
        android:layout_width="96dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/main_store_img_border"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/search_main_incheon"/>

    <TextView
        android:id="@+id/on_store_item_dates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_toEndOf="@id/on_store_item_img"
        android:layout_above="@id/on_store_item_title"
        android:paddingHorizontal="16dp"
        android:text="@string/store_reclr_txt_dates"
        android:textSize="13sp"
        android:textColor="@color/greyForMainBtmText"/>

    <TextView
        android:id="@+id/on_store_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/on_store_item_img"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginVertical="2dp"
        android:paddingHorizontal="16dp"
        android:text="서울"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/blackForText"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/on_store_item_num_lodge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/on_store_item_img"
        android:layout_below="@id/on_store_item_title"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:text="숙소 1개"
        android:textSize="14sp"
        android:textColor="@color/blackForText"
        android:maxLines="1"
        android:ellipsize="end" />
</RelativeLayout>
