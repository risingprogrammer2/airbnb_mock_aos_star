<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/folder_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:paddingBottom="16dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/transparentForBackground">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/folder_item_img1"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:elevation="1dp"
            android:src="@drawable/search_main_incheon"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/folder_item_img2"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_toEndOf="@id/folder_item_img1"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:adjustViewBounds="true"
            android:layout_marginBottom="1dp"
            android:scaleType="fitXY"
            android:elevation="1dp"
            android:src="@drawable/search_main_incheon"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/folder_item_img3"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_toEndOf="@id/folder_item_img1"
            android:layout_below="@id/folder_item_img2"
            android:layout_marginStart="8dp"
            android:layout_marginTop="1dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:elevation="1dp"
            android:src="@drawable/search_main_incheon"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/folder_item_dates"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/store_reclr_txt_dates"
        android:textSize="16sp"
        android:textColor="@color/greyForMainBtmText"/>

    <TextView
        android:id="@+id/folder_item_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:text="서울"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/folder_item_num_lodge"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:text="숙소 1개"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end" />
</LinearLayout>