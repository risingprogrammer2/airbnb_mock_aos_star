        android:start="-2dp"
        android:end="-2dp">
        <shape
            android:shape="rectangle">
            <!-- 테두리 내부 색상 설정 -->
            <solid
                android:color="@color/whiteForBackground"/>

            <!-- 테두리 내부 여백 설정 -->
            <padding/>

            <!-- 테두리 설정: 두께, 색상 -->
            <stroke
                android:width="1dp"
                android:color="@color/greyForMyPageDivider"/>
            <corners/>
