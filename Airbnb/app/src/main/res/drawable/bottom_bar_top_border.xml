<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:end="-1.3dp"
        android:start="-2dp"
        android:bottom="-1.3dp">
        <shape
            android:shape="rectangle">
            <!-- 테두리 내부 색상 설정 -->
            <solid
                android:color="@color/whiteForBackground"/>

            <!-- 테두리 내부 여백 설정 -->
            <padding/>

            <!-- 테두리 설정: 두께, 색상 -->
            <stroke
                android:width="1.2dp"
                android:color="@color/greyForLogInPhoneBorder" />

            <corners/>
        </shape>
    </item>
</layer-list>
